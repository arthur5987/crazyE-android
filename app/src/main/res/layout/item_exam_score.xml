<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@color/snow_white">

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_marginStart="0dp"-->
    <!--android:layout_marginEnd="0dp"-->
    <!--android:background="@color/white"-->
    <!--app:cardBackgroundColor="@color/snow_white"-->
    <!--android:foreground="?android:attr/selectableItemBackground"-->
    <!--app:cardCornerRadius="0dp"-->
    <!--app:cardElevation="0dp">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/examScoreValue"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:maxLines="1"
                android:text="871"
                android:textColor="@color/bittersweet"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/examScoreName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="毛泽东思想和中国特色社会主义理论体系概论(上)"
                    android:textColor="@color/tuatara"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/examScoreGpa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绩点：3.7"
                        android:textColor="@color/steel"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/examScoreCredit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="学分：3"
                        android:textColor="@color/steel"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/examType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/card_score_type_text_background"
                        android:paddingEnd="1.5dp"
                        android:paddingStart="1.5dp"
                        android:text="学科基础"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/examScoreSemester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:text="2017学年 秋季学期"
                    android:textColor="@color/aluminum"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

</android.support.constraint.ConstraintLayout>